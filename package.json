{
  "name": "brick-winston",
  "version": "0.1.0",
  "description": "winston for brick engine",
  "main": "index.js",
  "types": "typings/index.d.ts",
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./dist/brick-winston.mjs"
    },
    "./": "./"
  },
  "scripts": {
    "docs": "jsdoc -c conf.json",
    "build:mjs": "gen-esm-wrapper . ./dist/brick-winston.mjs",
    "build": "npm run build:mjs && tsc -d",
    "build:w": "tsc -d -w",
    "lint": "eslint --fix .",
    "check": "npm run build && npm run lint",
    "test": "npm run check && npm run test:cov",
    "test:watch": "node ./node_modules/.bin/jest --watch",
    "test:cov": "jest --coverage --env=node --runInBand"
  },
  "files": [
    "typings",
    "package.json",
    "lib",
    "plugins",
    "decorators",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiba-zhao/brick-winston.git"
  },
  "keywords": [
    "brick",
    "brick-winston",
    "winston"
  ],
  "author": "kiba.x.zhao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kiba-zhao/brick-winston/issues"
  },
  "homepage": "https://github.com/kiba-zhao/brick-winston#readme",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.20",
    "babel-eslint": "^10.1.0",
    "brick-engine": "^0.11.0",
    "eslint": "^7.31.0",
    "eslint-config-egg": "^9.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "faker": "^5.5.3",
    "gen-esm-wrapper": "^1.1.2",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "minami": "^1.2.3",
    "winston": "^3.3.3",
    "nock": "^13.1.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "lodash": "^4.17.20"
  },
  "peerDependencies": {
    "brick-engine": "^0.11.0",
    "winston": "^3.3.3"
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "plugins/**/*.js",
      "lib/**/*.js",
      "decorators/**/*.js",
      "!**/index.js"
    ]
  }
}
